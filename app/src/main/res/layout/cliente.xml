<?xml version="1.0" encoding="utf-8"?>
<!-- Ajusta vista para que el teclado y appbar no tapen el layout -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true" />

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Introducir IP -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etIP"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:ems="10"
                android:autofillHints=""
                android:hint="@string/escribeIp"
                android:inputType="text" />

            <Button
                android:id="@+id/bConectar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/conectar" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvEstadoCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/estadoCliente" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvChat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Enviar mensaje -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etMensajeCliente"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:autofillHints="name"
                    android:hint="@string/escribeMensaje"
                    android:inputType="textMultiLine" />

                <Button
                    android:id="@+id/bEnviarMensajeCliente"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/send"
                    android:layout_height="wrap_content"
                    android:text="@string/enviar" />

        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>